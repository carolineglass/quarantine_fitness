<%= render 'nav' %>
<h1>Hello, <%= @user.name %></h1>

<% if @user.routines.any? %>
<p>Here are your routines:</p>
    <% @user.routines.each do |routine| %>
    <%= routine.weekday %> | <%= link_to routine.name, routine_path(routine) %> <br><br>
    <% end %>
    <%= link_to 'Create a New Routine', new_routine_path %>
<% else %>
    <p>You have no routines yet!</p>
    <%= link_to 'Create a New Routine', new_routine_path %>
<% end %>

<p><%= link_to 'All Routines', routines_path%></p>
